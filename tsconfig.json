{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./es",
    "allowJs": false,
    "strict": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "compileOnSave": false
}